<div id="contenedor-contador">
  <h2>La fiesta empieza en</h2>
  <div id="cuenta-regresiva">
    <div class="bloque-tiempo">
      <span class="numero" id="dias">00</span>
      <span class="etiqueta">Días</span>
    </div>
    <div class="bloque-tiempo">
      <span class="numero" id="horas">00</span>
      <span class="etiqueta">Hs</span>
    </div>
    <div class="bloque-tiempo">
      <span class="numero" id="minutos">00</span>
      <span class="etiqueta">Min</span>
    </div>
    <div class="bloque-tiempo">
      <span class="numero" id="segundos">00</span>
      <span class="etiqueta">Seg</span>
    </div>
  </div>
  <div id="mensaje-final">¡Llegó el gran día!</div>
</div>

<style>
  #contenedor-contador {
    margin: 20px 0;
  }

  h2 {
    font-size: 25px;
  }

  /* Tus estilos CSS aquí (se aplican solo a este componente) */
  #cuenta-regresiva {
    font-family: 'Arial', sans-serif;
    color: #d63384;
    display: flex;
    justify-content: center;
    gap: 20px;
    padding: 20px;
  }
  .bloque-tiempo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(255, 255, 255, 0.8);
    padding: 15px;
    border-radius: 10px;
    min-width: 80px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    border: 2px solid pink;
  }
  .numero {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1;
  }
  .etiqueta {
    font-size: 0.9rem;
    text-transform: uppercase;
    margin-top: 5px;
    color: #666;
  }
  #mensaje-final {
    display: none;
    text-align: center;
    font-size: 2rem;
    color: var(--color-contador);
    animation: palpitar 1s infinite;
  }
  @keyframes palpitar {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }
  @media (max-width: 600px) {
    #cuenta-regresiva { gap: 10px; }
    .bloque-tiempo { min-width: 60px; padding: 10px; }
    .numero { font-size: 1.5rem; }
  }
</style>

<script>
  // Script Corregido (sin los signos de interrogación extra)
  const fechaObjetivo = new Date(2025, 11, 20, 22, 30, 0).getTime();

  const intervalo = setInterval(function() {
    const ahora = new Date().getTime();
    const distancia = fechaObjetivo - ahora;

    const dias = Math.floor(distancia / (1000 * 60 * 60 * 24));
    const horas = Math.floor((distancia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutos = Math.floor((distancia % (1000 * 60 * 60)) / (1000 * 60));
    const segundos = Math.floor((distancia % (1000 * 60)) / 1000);

    // Aquí quité los signos "?" que daban error
    const elDias = document.getElementById("dias");
    const elHoras = document.getElementById("horas");
    const elMinutos = document.getElementById("minutos");
    const elSegundos = document.getElementById("segundos");

    if(elDias) elDias.innerText = dias;
    if(elHoras) elHoras.innerText = horas < 10 ? "0" + horas : horas;
    if(elMinutos) elMinutos.innerText = minutos < 10 ? "0" + minutos : minutos;
    if(elSegundos) elSegundos.innerText = segundos < 10 ? "0" + segundos : segundos;

    if (distancia < 0) {
      clearInterval(intervalo);
      const cuenta = document.getElementById("cuenta-regresiva");
      const mensaje = document.getElementById("mensaje-final");
      // if(cuenta) cuenta.style.display = "none";
      if(mensaje) mensaje.style.display = "block";
    }
  }, 1000);
</script>