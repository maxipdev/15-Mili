---
import Layout from "../layouts/Layout.astro";
import Modal from "../components/Modal.astro"
import { Image } from 'astro:assets';
import foto1 from '../assets/foto-1.jpg';
import foto2 from '../assets/foto-2.jpg';
import foto3 from '../assets/foto-3.jpg';
---

<Layout>
    <h1>Fotos</h1>
	<section class="galeria">
        <div class="elemento">            <div class="contenedor-img">
                <Image class={'img'} src={foto1} alt="foto de mili posando" loading="lazy" decoding="async"/>
            </div></div>
        <div class="elemento">            <div class="contenedor-img">
                <Image class={'img'} src={foto1} alt="foto de mili posando" />
            </div></div>
        <div class="elemento">            <div class="contenedor-img">
                <Image class={'img'} src={foto2} alt="foto de mili posando" />
            </div></div>
        <div class="elemento">            <div class="contenedor-img">
                <Image class={'img'} src={foto1} alt="foto de mili posando" />
            </div></div>
        <div class="elemento">            <div class="contenedor-img">
                <Image class={'img'} src={foto3} alt="foto de mili posando" />
            </div></div>
    </section>
    <Modal id={'galery-photo'} />
</Layout>

<style>
    h1 {
        font-family: 'Great Vibes', cursive;
        font-size: 80px;
        margin: 20px 0 8px 0;
    }
    .galeria {
        display: grid;
        grid-template-columns: 1fr 1fr;
        background-color: var(--color-primario);
        gap: 8px;
    }

       .contenedor-img {
        width: 200px;
        height: 300px;

        .img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }
</style>

<script>
    const elementos = document.querySelectorAll('.elemento')
    const modal = document.querySelector('#galery-photo') as HTMLElement
    elementos.forEach((elemento)=> {
        elemento.addEventListener('click', ()=> {
            modal.style.display = 'flex'
        })
    })
</script>